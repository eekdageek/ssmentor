<%= form_for @participant do |p| %>

<% if @participant.errors.any? %>
<ul class="errors">
	<% @participant.errors.full_messages.each do |m| %>
	<li><%=m %></li>
	<% end %>
</ul>
<% end %>

<%= p.label :name %>
<%= p.text_field :name %>
<br>
<%= p.label :slack_id, 'Slack ID' %>
<%= p.text_field :slack_id %>

<p>Mentor <%= p.radio_button :mode, 'mentor' %>
Mentee <%= p.radio_button :mode, 'mentee', checked: true%></p>

<br>
<%= p.submit 'Save' %>
<% end %>